{
    "name": "x-graphql/schema-transformer",
    "description": "Transforming types, fields of GraphQL schema",
    "type": "library",
    "require-dev": {
        "nyholm/psr7": "^1.8",
        "phpunit/phpunit": "^11.0",
        "symfony/cache": "^7.0",
        "symfony/http-client": "^7.0",
        "symplify/easy-coding-standard": "^12.1",
        "x-graphql/http-schema": "^0.3"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "XGraphQL\\SchemaTransformer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XGraphQL\\SchemaTransformer\\Test\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "psr/simple-cache": "^2.0 || ^3.0",
        "webonyx/graphql-php": "^15.9",
        "x-graphql/delegate-execution": "^0.5",
        "x-graphql/utils": ">=0.2.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
